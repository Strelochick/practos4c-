<Window x:Class="Calc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ИНЖЕНЕРНЫЙ" Height="550" Width="350" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="ExpressionDisplay" IsReadOnly="True"
                 VerticalAlignment="Top" Height="30" Margin="10,10,2,0"
                 FontSize="16" TextAlignment="Right" Text="" Grid.ColumnSpan="2"/>

        <TextBox x:Name="ResultDisplay" IsReadOnly="True"
                 VerticalAlignment="Top" Height="50" Margin="10,50,2,0"
                 FontSize="28" TextAlignment="Right" Text="0" Grid.ColumnSpan="2"/>

        <UniformGrid Columns="5" Rows="7" Margin="5,110,2,15" Grid.ColumnSpan="2">
            <Button Content="sin" Click="FunctionButton_Click"/>
            <Button Content="π" Click="ConstantButton_Click"/>
            <Button Content="e" Click="ConstantButton_Click"/>
            <Button Content="CE" Click="ClearAll"/>

            <Button Content="⌦" Click="Clear"/>
            <Button Content="x^2" Click="FunctionButton_Click"/>
            <Button Content="1/x" Click="FunctionButton_Click"/>
            <Button Content="|x|" Click="FunctionButton_Click"/>
            <Button Content="cos" Click="FunctionButton_Click"/>

            <Button Content="tg" Click="FunctionButton_Click"/>
            <Button Content="√x" Click="FunctionButton_Click"/>
            <Button Content="(" Click="ParenthesisButton_Click"/>
            <Button Content=")" Click="ParenthesisButton_Click"/>

            <Button Content="n!" Click="FunctionButton_Click"/>
            <Button Content="/" Click="OperatorButton_Click"/>
            <Button Content="x^y" Click="FunctionButton_Click"/>
            <Button Content="7" Click="DigitButton_Click"/>
            <Button Content="8" Click="DigitButton_Click"/>

            <Button Content="9" Click="DigitButton_Click"/>
            <Button Content="*" Click="OperatorButton_Click"/>
            <Button Content="10^x" Click="FunctionButton_Click"/>
            <Button Content="4" Click="DigitButton_Click"/>
            <Button Content="5" Click="DigitButton_Click"/>

            <Button Content="6" Click="DigitButton_Click"/>
            <Button Content="-" Click="OperatorButton_Click"/>
            <Button Content="log" Click="FunctionButton_Click"/>
            <Button Content="1" Click="DigitButton_Click"/>
            <Button Content="2" Click="DigitButton_Click"/>

            <Button Content="3" Click="DigitButton_Click"/>
            <Button Content="+" Click="OperatorButton_Click"/>
            <Button Content="ln" Click="FunctionButton_Click"/>
            <Button Content="+/-" Click="FunctionButton_Click"/>
            <Button Content="0" Click="DigitButton_Click"/>
            <Button Content="," Click="DigitButton_Click"/>
            <Button Content="=" Click="CalculateResult" FontWeight="Bold"/>
        </UniformGrid>
    </Grid>
</Window>
